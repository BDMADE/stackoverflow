<div class="col-lg-8 col-lg-offset-2">
                <section class="panel">
                    <header class="panel-heading">
                        Problem Forms
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            
                            <%= form_for @problem,html:{class: 'form-horizontal'} do |f| %>
                            
                            <div class="form-group">
                                
                                <%= f.label :name,class: 'col-lg-3 col-sm-4 control-label' %>
                                <div class="col-lg-9 col-sm-8">
                                 <%= f.text_area :name,class: 'form-control' %>   
                                    
                                </div>
                            </div>
                            

                            <div class="form-group">
                                
                                <%= f.label :solution,class: 'col-lg-3 col-sm-4 control-label' %>
                                <div class="col-lg-9 col-sm-8">
                                 <%= f.text_area :solution,class: 'form-control' %>   
                                    
                                </div>
                            </div>

                            <div class="form-group">
                                
                                <%= f.hidden_field :user_id,value: current_user.id %>
                                
                            </div>                          

                            



                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-10">
                                    <%= f.submit 'Submit',class:'btn btn-success' %>
                                    <%= link_to 'Back', admin_path,class:'btn btn-info' %>
                                </div>
                            </div>



                        <% end %>
                        </div>
                    </div>
                </section>

            </div>