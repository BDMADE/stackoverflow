<h1>Listing Problems</h1>

<div><%= link_to 'New Problem', new_problem_path,class: 'btn btn-md btn-success' %></div>


<br>
<div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Problem table Table
                        </header>
                    <div class="panel-body">
                    <div class="adv-table">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Solution</th>
                <th>Author</th>
                <th>Action 1</th>
                <th>Action 2</th>
                <th>Action 3</th>
                
            </tr>
        </thead>
        <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.name %></td>
        <td><%= problem.solution %></td>
        <td><%= problem.user.last_name %></td>
        <td><%= link_to 'Show',problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
    </table>

                    </div>
                    </div>
                </section>
            </div>
        </div>
