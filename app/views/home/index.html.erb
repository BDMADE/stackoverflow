<!--This parital will show sign in and sign up link in navigation bar in home page-->
<%= content_for :nav do %>

<% if current_user %>
<ul class="nav navbar-nav navbar-right">
<li><a href="#">Logged in as <b><%= current_user.first_name %></b>&nbsp;<b><%= current_user.last_name %></b></a></li>
 <li><%= link_to "Admin", admin_path %></li>
 <li><%= link_to "Log Out", logout_path %></li>
 </ul>
 <% else %>
 <ul class="nav navbar-nav navbar-right">
 <li><%= link_to "Sign In", login_path %></li>
 <li><%= link_to "Sign Up", signup_path %></li>
 </ul>
 <% end %>

<% end %>


<div class="container">
<h2>Stack Overflow</h2>
  <div class="panel panel-default">
    <div class="panel-body">
    	<% @problems.each do |p| %>
<div class="bs-callout bs-callout-danger"><h4><%= p.name %></h4></div>
<div class="bs-callout bs-callout-info"><h4><%= p.solution %></h4></div>

<p>Author: <%= p.user.first_name %>&nbsp;<%= p.user.last_name %></p>
<% end %>

<div class="row">
      <div class="col-md-12 col-md-offset-10">

        <div class="apple_pagination">

          <%= will_paginate @problems, :container => false %>
        </div>


      </div>
</div>



    </div>
  </div>
</div>



  
  
</div>

